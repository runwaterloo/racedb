# Set gunicorn container as upstream server
upstream {{ app }}_gunicorn {
  server {{ app }}_gunicorn:8000;
}
 

# Expires map
map $sent_http_content_type $expires {
    default                    off;
    text/html                  epoch;
    text/css                   max;
    application/javascript     max;
    ~image/                    max;
}

# Default server (port 80)
# Serve requests normally over http
server {
    listen       80  default_server;
    server_name  _;
    set_real_ip_from  10.255.0.0/16;
    real_ip_header    X-Forwarded-For;
    location /nginx-stats {
        stub_status on;
        access_log off;
    }
    location /static {
        alias /static;
    }
    location / {
        proxy_pass http://{{ app }}_gunicorn;
        proxy_set_header Host            $host;
        proxy_set_header X-Forwarded-For $remote_addr;
    }
}

{% if isprod == 'true' %}
# {{ virtual_server }} (port 80)
# Forward requests to https (except certbot)
server {
    listen 80;
    server_name {{ virtual_server }};
    set_real_ip_from  10.255.0.0/16;
    real_ip_header    X-Forwarded-For;
    location /.well-known/acme-challenge/ {
            root /var/www/certbot;
    }
    location / {
       return 301 https://$host$request_uri;
    }
}

# {{ virtual_server }} (port 443)
# Serve requests normally over https
server {
    listen 443 ssl;
    expires $expires;
    server_name {{ virtual_server }};
    set_real_ip_from  10.255.0.0/16;
    real_ip_header    X-Forwarded-For;
    location /static {
        alias /static;
    }
    location / {
        proxy_pass http://{{ app }}_gunicorn;
        proxy_set_header Host            $host;
        proxy_set_header X-Forwarded-For $remote_addr;
    }
    ssl_certificate /etc/letsencrypt/live/{{ virtual_server }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ virtual_server }}/privkey.pem;
}
{% endif %}
