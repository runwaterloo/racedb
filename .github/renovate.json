{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["docker-compose", "helm-values"],
  "packageRules": [
    {
      "matchPackageNames": ["redis"],
      "matchDatasources": ["docker"],
      "matchManagers": ["docker-compose", "helm-values"],
      "groupName": "redis image updates",
      "prTitle": "chore(deps): update redis from {{currentVersion}} to {{newVersion}}"
    },
    {
      "matchPackagePatterns": [".*"],
      "excludePackageNames": ["redis"],
      "enabled": false
    }
  ]
}
